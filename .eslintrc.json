{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": [
        "node_modules/*"
    ],
    "extends": "eslint:recommended",
    "rules": {
        "no-undef": "error",
        "no-extra-semi": "off",
        "semi": [
            "error",
            "always"
        ],
        "no-constant-condition": "off",
        "no-useless-escape": "off"
    }
}